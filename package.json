{
  "name": "yarnboilerplate",
  "version": "1.0.0",
  "description": "Test on simple setup with Yarn-only scripts",
  "main": "index.js",
  "author": "Mikkel Jensen (EB)",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run lint && npm run styles && npm run scripts && npm run markup",
    "clean": "rm -rf dist/ && mkdir dist && mkdir dist/styles && mkdir dist/scripts",
    "install": "curl https://raw.githubusercontent.com/EkstraBladetUdvikling/editorconfig/master/.editorconfig > .editorconfig && npm run clean",
    "lint:scripts": "eslint src/scripts/**/*.js",
    "lint:styles": "stylelint src/styles/**/*.css --config stylelint-config-eb",
    "lint": "npm-run-all --parallel --silent lint:*",
    "markup:watch": "npm run markup -- -w --pretty",
    "markup": "pug src/index.pug --out dist",
    "scripts:watch": "watchify src/scripts/main.js -t [ babelify --presets [ latest ] ] -o dist/scripts/main.min.js -dv",
    "scripts": "browserify src/scripts/main.js -t [ babelify --presets [ latest ] ] | uglifyjs -mc -o dist/scripts/main.min.js",
    "start": "npm run --silent watch & browser-sync start --server 'dist' --no-open --files 'dist/**/*'",
    "start:tunnel": "npm start -- --tunnel",
    "styles:watch": "npm run styles -- -w",
    "styles": "postcss -u postcss-import -u postcss-cssnext --postcss-cssnext.browsers '> 5%' --postcss-cssnext.warnForDuplicates 0 -u postcss-url -u postcss-reporter -u cssnano -o dist/styles/main.min.css src/styles/main.css",
    "watch": "npm-run-all --parallel --silent *:watch"
  },
  "stylelint": {
    "extends": "stylelint-config-eb",
    "rules": {
      "indentation": 2
    }
  },
  "devDependencies": {
    "babel-preset-latest": "^6.16.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.5",
    "browserify": "^13.1.1",
    "cssnano": "latest",
    "eslint": "^3.12.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "npm-run-all": "latest",
    "postcss": "latest",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "latest",
    "postcss-import": "latest",
    "postcss-reporter": "latest",
    "postcss-url": "latest",
    "pug-cli": "latest",
    "stylelint": "^7.6.0",
    "stylelint-config-eb": "github:EkstraBladetUdvikling/stylelint-config-eb",
    "stylelint-scss": "^1.4.1",
    "stylelint-selector-bem-pattern": "^1.0.0",
    "uglify-js": "latest",
    "watchify": "^3.8.0"
  }
}
